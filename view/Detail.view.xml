<mvc:View controllerName="application.controller.Detail"
xmlns:smartForm="sap.ui.comp.smartform" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:core="sap.ui.core"
xmlns:main="sap.ui.webc.main" 
xmlns="sap.m">
<Page title="{i18n>detailTitle}">
    <Panel class="sapUiSmallMargin">
        <!-- Contract -->
        <VBox>
            <HBox alignItems="Center" justifyContent="SpaceBetween">
                <Title text="{i18n>contract}" />
                <SearchField width="90%" search="onSearchDetail" />
            </HBox>
        </VBox>
        <Table id="tableDataContract" items="{orderDetails>/}">
            <columns>
                <Column>
                    <Text text="{i18n>OrderID}" />
                </Column>
                <Column>
                    <Text text="{i18n>ProductID}" />
                </Column>
                <Column>
                    <Text text="{i18n>UnitPrice}" />
                </Column>
                <Column>
                    <Text text="{i18n>Quantity}" />
                </Column>
                <Column>
                    <Text text="{i18n>Discount}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{orderDetails>OrderID}" />
                        <Text text="{orderDetails>ProductID}" />
                        <Text text="{orderDetails>UnitPrice}" />
                        <Text text="{orderDetails>Quantity}" />
                        <Text text="{orderDetails>Discount}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
    <!-- Agrotools -->
    <Panel class="sapUiSmallMargin" >
        <smartForm:SmartForm title="{i18n>agrotools}" id="smartForm" editable="true" useHorizontalLayout="true">
            <smartForm:Group>
                <!-- Column 1 -->
                <smartForm:GroupElement >
                    <VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>document}" />
                            <Input value="{/campo1}" placeholder="{i18n>keySearch}" width="100%" search="" />
                        </VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>municipality}" />
                            <Select change="handleChange" width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="" />
                                    <core:Item text="" />
                                </items>
                            </Select>
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 2 -->
                <smartForm:GroupElement >
                    <VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>contact}" />
                            <Input value="{/campo2}" placeholder="{i18n>text}" width="90%" search="" />
                        </VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>harvest}" />
                            <Input value="{/campo3}" placeholder="{i18n>text}" width="90%" search="" />
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 3 -->
                <smartForm:GroupElement >
                    <VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>volumeTaded}" required="true" />
                            <Input value="{/campo4}" placeholder="{i18n>text}" width="90%" search="" />
                        </VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>volumeAvailable}" />
                            <Input value="{/campo5}" placeholder="{i18n>text}" width="90%" search="" />
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 4 -->
                <smartForm:GroupElement >
                    <VBox>
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>deliveryDate}" />
                            <Input value="{/campo6}" placeholder="{i18n>keySearch}" width="90%" search="" />
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        <Table id="tableAgro" items="{orderDetails>/}" growing="true" >
            <columns>
                <Column>
                    <Text text="{i18n>orderID}" />
                </Column>
                <Column>
                    <Text text="{i18n>productID}" />
                </Column>
                <Column>
                    <Text text="{i18n>unitPrice}" />
                </Column>
                <Column>
                    <Text text="{i18n>quantity}" />
                </Column>
                <Column>
                    <Text text="{i18n>discount}" />
                </Column>
                <Column>
                    <Text text="{i18n>total}" />
                </Column>
                <Column>
                    <Label />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Label text="{orderDetails>OrderID}" editable="{orderDetails>/editable}" />
                        <Label text="{orderDetails>ProductID}" editable="{orderDetails>/editable}" />
                        <Label text="{orderDetails>UnitPrice}" editable="{orderDetails>/editable}" />
                        <Label text="{orderDetails>Quantity}" editable="{orderDetails>/editable}" />
                        <Label text="{orderDetails>Discount}" editable="{orderDetails>/editable}" />
                        <Label text="{= ${orderDetails>UnitPrice} * ${orderDetails>Quantity} * (1 - ${orderDetails>Discount})}" editable="{orderDetails>/editable}" />
                    <HBox>
                        <Button id="editButton" type="Transparent" press="onEdit"  visible="true" icon="sap-icon://edit"/>
                        <Button id="saveButton" type="Transparent" press="onSave" visible="false" icon="sap-icon://save"/>
                        <Button id="cancelButton" type="Transparent" press="onCancel" visible="false" icon="sap-icon://decline"/>
                    </HBox>
                    </cells>
                </ColumnListItem>                
            </items>
        </Table>
    </Panel>
    <!-- Criterion -->
    <Panel class="sapUiSmallMargin" headerText="{i18n>opinions}">
        <smartForm:SmartForm editable="true" useHorizontalLayout="true">
            <smartForm:Group>
                <!-- Column 1 -->
                <smartForm:GroupElement>
                    <VBox>
                        <!-- BP SAP -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>bpSap}" />
                            <Input id="bpSap" value="{/bpSap}" placeholder="{i18n>text}" width="90%" />
                        </VBox>
                        <!-- N° parecer -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>nCriterion}" />
                            <Input value="{/campo8}" placeholder="{i18n>keySearch}" width="90%" />
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 2 -->
                <smartForm:GroupElement>
                    <VBox>
                        <!-- Status Parecer -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>stateCriterion}" />
                            <Select change="handleChange" width="90%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="" />
                                    <core:Item text="" />
                                </items>
                            </Select>
                        </VBox>
                        <!-- Motivo Anmálize -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>reasonAnalyze}" />
                            <Select change="handleChange" width="90%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="" />
                                    <core:Item text="" />
                                </items>
                            </Select>
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 3 -->
                <smartForm:GroupElement>
                    <VBox >
                        <!-- Anexar Parecer -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>attachOpinion}" />
                            <main:FileUploader
                                value="{/campo9}"
                                placeholder="{i18n>opinionsSearch}"
                                width="100%"
                                uploadUrl="{suaURLdeUpload}"
                                uploadComplete="onUploadComplete"
                                change="onFileChange"
                                
                                />
                            
                        </VBox>
                        <!-- Nao Conformidade -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>noCompliance}" />
                            <Select change="handleChange" width="90%">
                                <items>
                                    <core:Item text="SEMA" />
                                    <core:Item text="SEMA POLÍCONO" />
                                    <core:Item text="IBAMA POLÍCONO" />
                                </items>
                            </Select>
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
                <!-- Column 4 -->
                <smartForm:GroupElement>
                    <VBox>
                        <!-- Motivo Parecer -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>reasonOpinion}" />
                            <Select change="handleChange" width="90%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="" />
                                    <core:Item text="" />
                                </items>
                            </Select>
                        </VBox>
                        <!-- Conformidade Desmatamento -->
                        <VBox class="sapUiTinyMargin">
                            <Label text="{i18n>complianceDeforestation}" />
                            <Select change="handleChange" width="90%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="" />
                                    <core:Item text="" />
                                </items>
                            </Select>
                        </VBox>
                    </VBox>
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
    </Panel> 
    <!-- Footer -->
    <footer>
        <Bar>
            <contentRight>
            <Button 
                text="{i18n>registerOpinion}" 
                icon="sap-icon://add-activity" 
                type="Emphasized" 
                press="onRegister" 
                ariaHasPopup="Dialog"/>
            </contentRight>
        </Bar>
    </footer>
</Page>
</mvc:View>